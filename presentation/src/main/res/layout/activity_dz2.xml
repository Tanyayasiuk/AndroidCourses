<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@color/lesson2Background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/austria"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/redColor"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@color/redColor"
                    android:orientation="horizontal"></LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/poland"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="top"
                    android:background="@color/redColor"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom"
                    android:background="#ffffff"></LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/italy"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border"
                android:orientation="horizontal">


                <TableRow
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#13b918" />

                <TableRow
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <TableRow
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/redColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/columbia"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffe22c" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="#fb2732af" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#e40404" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/madagascar"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border">

                <TableRow
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/redColor" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="bottom"
                        android:background="#048e19" />
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/thailand"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/redColor" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#ffffff" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fb2732af" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#ffffff" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/redColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/denmark"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dz2_start_end_padding"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_height="37dp"
                        android:background="@color/redColor"></LinearLayout>

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_height="38dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="15dp"
                        android:background="@color/redColor"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="37dp"
                        android:background="@color/redColor"></LinearLayout>

                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="38dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="15dp"
                        android:background="@color/redColor"></LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
